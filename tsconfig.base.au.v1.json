{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": false
  },
  "include": [
    "src",
    "dev-app",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}